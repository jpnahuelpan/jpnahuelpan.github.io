---
const dateTime: Date = new Date();
---

<footer class="h-8">
  <div class="flex h-full">
    <div class="pt-[2px] shrink-0">
      Last update: {dateTime.toLocaleDateString("en-US", {
        year: "numeric", month: "short", day: "numeric"})}
    </div>
    <div>
      <a
        target="_blank"
        href="/feed.xml"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="mx-1 fill-stone-600 hover:fill-red-700">
          <path d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"></path>
          <path d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"></path>
          <circle cx="6" cy="18" r="2"></circle>
        </svg>
      </a>
    </div>
  </div>
</footer>